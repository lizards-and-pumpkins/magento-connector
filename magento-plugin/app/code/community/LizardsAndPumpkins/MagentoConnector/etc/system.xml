<?xml version="1.0" encoding="UTF-8"?>
<config>
    <sections>
        <lizardsAndPumpkins translate="label" module="lizardsAndPumpkins_magentoconnector">
            <label><![CDATA[Lizards &amp; Pumpkins]]></label>
            <tab>catalog</tab>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>

            <groups>
                <magentoconnector translate="label">
                    <label>MagentoConnector</label>
                    <sort_order>1000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <api_url translate="label">
                            <label>API Url</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </api_url>
                        <local_path_for_product_export translate="label comment">
                            <label>Path for product XML</label>
                            <comment>
                                <![CDATA[Path from magento's viewpoint. Here is the product XML generated/uploaded to.<br/>Example: file:///vagrant/sample-project/share]]>
                            </comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </local_path_for_product_export>
                        <local_filename_template translate="label comment">
                            <label>Filename Template</label>
                            <comment><![CDATA[Filename template for product export XML.<br/>The string <code>%s</code> will be replaced by a timestamp.]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </local_filename_template>
                        <image_target translate="label comment">
                            <label>Image export directory</label>
                            <comment><![CDATA[Directory where the images are linked into.]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </image_target>
                        <stock_xml_target translate="label comment">
                            <label>Target for stock XML</label>
                            <comment>
                                <![CDATA[Insert a complete path, like: <pre>file://var/www/magento/var/stock.xml</pre> or <pre>ssh2.scp://username:password/stock.xml</pre>]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </stock_xml_target>
                        <stores_to_export translate="label">
                            <label>Stores to Export</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>lizardsAndPumpkins_magentoconnector/adminhtml_system_config_source_store</source_model>
                            <backend_model>lizardsAndPumpkins_magentoconnector/adminhtml_system_config_backend_arrayBackend</backend_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </stores_to_export>
                        <associated_product_attributes translate="label comment">
                            <label>Child Product Attributes</label>
                            <comment><![CDATA[Additional (comma separated) attributes to add to exported associated simplple products.]]></comment>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </associated_product_attributes>
                        <disable_tls_peer_verification translate="label">
                            <label>Disable HTTPS certificate verification for API requests</label>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </disable_tls_peer_verification>
                    </fields>
                </magentoconnector>
                <data_version translate="label">
                    <label><![CDATA[Content Data Version]]></label>
                    <sort_order>300</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <for_export translate="label comment">
                            <label>Data version to use for all exports</label>
                            <frontend_input>text</frontend_input>
                            <comment><![CDATA[Changing this value does not affect products already queued for export.]]></comment>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </for_export>
                    </fields>
                </data_version>
            </groups>
        </lizardsAndPumpkins>
    </sections>
</config>
